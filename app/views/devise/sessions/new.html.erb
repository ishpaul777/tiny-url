<main class="container-wrapper d-flex flex-column bg-secondary bg-opacity-10 vh-100">
  <div class="w-100 navbar d-flex p-3 align-items-center justify-content-center bg-primary-main">
    <p class="navbar-brand fs-5 m-0 text-light">Sign in</p>
  </div>
  <div class= "wid-100 d-flex flex-column justify-content-center align-items-center" >
    <div class= "wid-90 align-middle" >
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field form-floating mt-3">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
          <%= f.label :email, class: "form-label" %><br />
        </div>
        <div class="field form-floating">
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
          <%= f.label :password, class: "form-label" %><br />
        </div>
        <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me, class: "form-label" %>
          </div>
        <% end %>
        <div class="actions">
          <%= f.submit "Log in", class: "btn btn-primary mt-2 mb-2 w-100" %>
        </div>
      <% end %>
    </div>
    <%= render "devise/shared/links" %>
  </div>
</main>
